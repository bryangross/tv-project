<!doctype html>
<html>
  <head>
    <title>Flatiron Sinatra Project Template</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="container-full">
    <h1 style="font-size:50px;" align="center"> AmazonPrime, Hulu, Netflix Comparison </h1>


    <form action "/shows" method="POST">
    <% @show_quantity.to_i.times do |i|%>
      <p>Show name: <input type="text" name="show_name[<%=i%>]"></p>
    <% end %>
    <input class="btn btn-primary" type="submit">
    </form>
    <%= @show_name %>


    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
